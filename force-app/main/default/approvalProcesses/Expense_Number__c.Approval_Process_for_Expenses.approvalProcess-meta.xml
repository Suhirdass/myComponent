<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>jj@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>khanh@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>max@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>nancy@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>tracey@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>vijay@wearewovn.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>ExpenseStatus__c</field>
        <field>Name</field>
        <field>ExpenseName__c</field>
        <field>Project__c</field>
        <field>TotalExpenseLines__c</field>
        <field>TotalExpenseAmount__c</field>
        <field>Owner</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Expense_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>nancy@wearewovn.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Expense_Number__c.ExpenseStatus__c</field>
                <operation>equals</operation>
                <value>Submitted</value>
            </criteriaItems>
            <criteriaItems>
                <field>Expense_Number__c.TotalExpenseLines__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Expense_Number__c.Total_Expense_Amount_del__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>ApprovalCriteria</label>
        <name>ApprovalCriteria</name>
    </approvalStep>
    <description>Approval Process for Expense Management - Managers</description>
    <emailTemplate>Expense_Report_Templates/Expense_Report_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Expense_Number__c.ExpenseStatus__c</field>
            <operation>equals</operation>
            <value>Draft,Recalled,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Expense_Number__c.TotalExpenseLines__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Expense_Number__c.TotalExpenseAmount__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Expense_Number__c.CreatedBy</field>
            <operation>notEqual</operation>
            <value>Khanh Ngo</value>
        </criteriaItems>
        <criteriaItems>
            <field>Expense_Number__c.CreatedBy</field>
            <operation>notEqual</operation>
            <value>JJ Hanley</value>
        </criteriaItems>
        <criteriaItems>
            <field>Expense_Number__c.CreatedBy</field>
            <operation>notEqual</operation>
            <value>Max Rudsten</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Expense_Report_APPROVED</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Record_Type</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdatedStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Expense_Report_REJECTED</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RejectUpdateStatus</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submitted_Expense_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval Process for Expenses</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Expense_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
