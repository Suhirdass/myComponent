    <rules>
        <fullName>New IT request</fullName>
        <actions>
            <name>New_IT_Onboarding_Request</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>IT_On_Boarding_Request__c.Type__c</field>
            <operation>contains</operation>
            <value>Employee,Contractor</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>New IT request - COMPLETE</fullName>
        <actions>
            <name>New_IT_Onboarding_Request_COMPLETE</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>IT_On_Boarding_Request__c.IT_Request_Complete__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
