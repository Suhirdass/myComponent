    <rules>
        <fullName>Update Cancelled PWO</fullName>
        <actions>
            <name>Update_Cancelled_PWO</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_PWO_Packing_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Production_Work_Order__c.Status__c</field>
            <operation>equals</operation>
            <value>Cancelled,Rejected</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update PWO to Planned Where Release and Plan ISNUL</fullName>
        <actions>
            <name>Reset_PWO_to_Planned_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Production_Work_Order__c.Planned_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Released_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Packaging_Status__c</field>
            <operation>notEqual</operation>
            <value>Cancelled,WIP,Completed</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update PWO to WIP</fullName>
        <actions>
            <name>Update_PWO_to_WIP</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Production_Work_Order__c.Actual_Packaging_Start_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Balance_Qty__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Hard_Close_PWO__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Updated PWO Status to Planned</fullName>
        <actions>
            <name>Update_PWO_to_Planned</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Production_Work_Order__c.Planned_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Packaging_Status__c</field>
            <operation>notEqual</operation>
            <value>WIP,Completed,Cancelled</value>
        </criteriaItems>
        <criteriaItems>
            <field>Production_Work_Order__c.Released_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Updated PWO Status to Released</fullName>
