<aura:component extends="c:utility" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" >
    
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="recordName" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.navigate}" />
    <aura:html tag="style">
        .modal-body{
        	display : none;
        }
        .slds-modal__close{
        	display : none !important ;
        }
    </aura:html>
    
</aura:component>